<ugts:UgtsWindow x:Class="UGTS.WPF.MessageWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ugts="clr-namespace:UGTS.WPF"        
        
    Title="Title text goes here" Height="134" Width="415" MinWidth="274" MinHeight="134" MaxHeight="134">
    <Grid TextOptions.TextFormattingMode="Display" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="97">
        <TextBlock Name="messageText" Margin="10,10,10,0" TextWrapping="Wrap" Text="Message text goes here:" VerticalAlignment="Top" RenderTransformOrigin="0.137,0.533" Height="21"/>
        <TextBox Height="20" HorizontalAlignment="Stretch" Margin="10,36,12,0" Name="inputEditor" VerticalAlignment="Top" FontFamily="Lucida Console" FontSize="12" VerticalContentAlignment="Center" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Right" Margin="0,63,12,0" Name="button0" Click="HButtonClick" VerticalAlignment="Top" Width="75" IsCancel="True" />
        <Button Content="OK" Height="23" HorizontalAlignment="Right" Margin="0,63,93,0" Name="button1" Click="HButtonClick" VerticalAlignment="Top" Width="75" IsDefault="True" />
        <Button Content="Retry" Height="23" HorizontalAlignment="Right" Margin="0,63,173,0" x:Name="button2" Click="HButtonClick" VerticalAlignment="Top" Width="75" IsDefault="True" />
    </Grid>
</ugts:UgtsWindow>
